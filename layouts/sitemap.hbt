<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{#each collections as |collection|}}
    {{#each collection as |page|}}
      <url>
        <loc>{{link page.path protocol='http'}}</loc>
        {{#if (or page.lastmod page.date)}}
          <lastmod>{{sitemapdate (or page.lastmod page.date)}}</lastmod>
        {{/if}}
        {{#if (or page.changefreq collection.changefreq)}}
          <changefreq>{{or page.changefreq collection.changefreq}}</changefreq>
        {{/if}}
        <priority>{{or page.priority (or collection.priority '0.8')}}</priority>
      </url>
    {{/each}}
  {{/each}}
</urlset>
