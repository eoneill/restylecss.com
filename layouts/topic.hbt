<!DOCTYPE html>
<html class="no-js">
<head>
  {{> head stylesheets='default'}}
</head>

<body class="{{ page.class }}{{inline-if page.aside '' ' full-width'}}" id="pageid_{{ page.id }}">
  {{> header title=page.tag nav=site.nav}}

  <div id="global-container">
    {{>sidebar collections=page.aside}}

    <main id="global-main">
      <div id="global-content">
        <h2>&ldquo;{{page.tag}}&rdquo; topics</h2>
        {{#with (lookup this.alltags page.tag)}}
          {{debug this}}

          {{#each this as |tagged|}}
            <article class="topic">
              <h3><a href="{{link tagged.path}}">{{tagged.title}}</a></h3>
              {{#if tagged.excerpt}}
                <section class="description">
                  {{tagged.excerpt}}
                </section>
              {{/if}}
            </article>
          {{/each}}

        {{/with}}
      </div>
    </main>
  </div>

  {{> footer }}
</body>
</html>
